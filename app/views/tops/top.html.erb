<h1>Tops#top</h1>
<p>Find me in app/views/tops/top.html.erb</p>

<div id="a">
    <button type="button" class="btn btn-primary" id="bTop">一番下の要素に移動</button>
</div>
<div id="b">
    <button type="button" class="btn btn-primary" id="bMid">一番上の要素に移動</button>
</div>
<div id="c">
    <button type="button" class="btn btn-primary" id="bBot">真ん中の要素に移動</button>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

<script>
    var aLocate = $('#a').offset().top;
    var bLocate = $('#b').offset().top;
    var cLocate = $('#c').offset().top;

    $('#bTop').click(function(){
        $(window).scrollTop(cLocate);
    });

    $('#bMid').click(function(){
        $(window).scrollTop(aLocate);
    });

    $('#bBot').click(function(){
        $(window).scrollTop(bLocate);
    });

</script>